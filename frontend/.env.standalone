# PLC管理系统前端独立部署环境配置
# 用于可执行文件部署

# 应用端口
PORT=3000
HOSTNAME=localhost

# 后端API地址配置
# 本地开发环境
NEXT_PUBLIC_API_URL=http://localhost:8000

# 生产环境API地址（根据实际部署调整）
# NEXT_PUBLIC_API_URL=http://your-backend-server:8000

# 应用配置
NEXT_PUBLIC_APP_NAME=PLC管理系统
NEXT_PUBLIC_APP_VERSION=1.0.0

# 日志级别
LOG_LEVEL=info

# 其他配置
NODE_ENV=production